<p class="text-success"><%= notice %></p>

<h1>Menus</h1>

<%= link_to "New menu", new_menu_path, class: "btn btn-primary mb-4" %>

<div id="menus" class="row row-cols-1 row-cols-md-4 g-4">
  <% @menus.each do |menu| %>
    <div class="col">
      <div class="card h-100">
        <%= render menu %>
        <div class="card-body">
          <p class="card-text">
            <%= link_to "Show this menu", menu, class: "btn btn-secondary" %>
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%= link_to "New menu", new_menu_path, class: "btn btn-primary mt-4" %>
